//repetir 

Proceso sin_titulo
	Definir cont, suma Como Entero;
	cont = 0;
	Repetir 
		cont = cont + 1;
		suma = suma + cont;
	Hasta Que cont = 100
	Escribir "el total es: ", suma;
FinProceso


//mientras

Proceso sin_titulo
	Definir cont, suma Como Entero;
	cont = 0;
	mientras cont <> 100 Hacer
		cont = cont + 1;
		suma = suma + cont;
	FinMientras
	Escribir "el total es: ", suma;
FinProceso


//para

Proceso sin_titulo
	Definir cont, suma Como Entero;
	Para cont<-1 Hasta 100 Con Paso 1 Hacer
		suma = suma + cont;
	FinPara
	Escribir "el total es: ", suma;
FinProceso
